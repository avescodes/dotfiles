" Window size
set winwidth=85
let g:halfsize = 86
let g:fullsize = 171
set lines=50
let &columns = g:halfsize

" Font
set guifont=Pragmata_TT:h15.00

" No audible bell
set vb

" No toolbar
set guioptions-=T
set guioptions-=R
set guioptions-=L
set guioptions-=r
set guioptions-=l

" Use console dialogs
set guioptions+=c
