[include]
  path = ~/.gitconfig.github
[user]
  name = Ryan Neufeld
  email = ryan@ryanneufeld.ca
[color]
  branch = auto
  diff = auto
  interactive = auto
  status = auto
[color "branch"]
  current = yellow reverse
  local = yellow
  remote = green
[color "diff"]
  meta = yellow bold
  frag = magenta bold
  old = red bold
  new = green bold
[color "status"]
  added = yellow
  changed = green
  untracked = cyan
[core]
  excludesfile = /Users/ryan/.gitignore
  autocrlf = input
[branch]
  autosetupmerge = true
[alias]
  both = diff HEAD # show staged and unstaged changes (what would be committed with "git commit -a")
  br = branch
  ci = commit
  co = checkout
  cp = cherry-pick
  df = diff
  dif = diff
  lg = log -p
  lol = log --graph --decorate --pretty=oneline --abbrev-commit
  lola = log --graph --decorate --pretty=oneline --abbrev-commit --all
  st = status
  staged = diff --cached # show difference between the HEAD and the index
  unstaged = diff # show difference between working tree and the index

  l = "!source ~/.config/dotfiles/.githelper && pretty_git_log"
[push]
  # Push current branch even if you've never pushed it before
  default = current
