# Use C-p as the escape sequence, instead of C-a.
# C-a and emacs don't get along. 
# At all.
escape ^hh

autodetach            on
crlf                  off
#deflogin              off
hardcopy_append       on
vbell                 off
defscrollback         10000
silencewait           10
shell                 zsh

hardstatus alwayslastline "%{Rk}%H %{g}| %{G}%n: %{B}%t%=%{g}| %{c}%d/%m %c:%s %{g}| %{y}%{+b}%l"


